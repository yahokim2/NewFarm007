	<typeAliases>
		<typeAlias type="com.farm.biz.dto.ProductVO" alias="product"/>
		<typeAlias type="com.farm.biz.dto.MemberVO" alias="member"/>
		<typeAlias type="com.farm.biz.dto.AddressVO" alias="address"/>
